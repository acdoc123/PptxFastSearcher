<Window
    x:Class="PptxFastSearcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PptxFastSearcher"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Tìm kiếm nội dung trong file Powerpoint"
    Width="800"
    Height="650"
    MinWidth="500"
    MinHeight="450"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Icon="/Resources/search_logo.ico"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Name="txtFolderPath"
                    Grid.Column="0"
                    Height="45"
                    Margin="0,0,10,0"
                    Padding="10,0,10,0"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="📁 Đường dẫn thư mục chứa PPTX"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <Button
                    Name="btnBrowse"
                    Grid.Column="1"
                    Height="45"
                    Click="btnBrowse_Click"
                    Content="Chọn thư mục"
                    Cursor="Hand" />
            </Grid>

            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Name="txtKeyword"
                    Grid.Column="0"
                    Height="45"
                    Margin="0,0,10,0"
                    Padding="10,0,10,0"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="🔍 Nhập từ khóa cần tìm..."
                    FontSize="15"
                    KeyDown="txtKeyword_KeyDown"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <Button
                    Name="btnSearch"
                    Grid.Column="1"
                    Width="110"
                    Height="45"
                    Margin="0,0,10,0"
                    Click="btnSearch_Click"
                    Content="Tìm Kiếm"
                    Cursor="Hand" />
                <Button
                    Name="btnHistory"
                    Grid.Column="2"
                    Height="45"
                    Click="btnHistory_Click"
                    Content="🕒 Lịch sử (0)"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Hiển thị 6 lịch sử gần nhất trong phiên hiện tại" />
            </Grid>

            <WrapPanel Margin="0" Orientation="Horizontal">
                <GroupBox
                    Margin="0,0,15,0"
                    materialDesign:ColorZoneAssist.Mode="Standard"
                    Header="Chế độ tìm kiếm"
                    Style="{StaticResource MaterialDesignCardGroupBox}">
                    <WrapPanel Margin="0" Orientation="Horizontal">
                        <RadioButton
                            Name="rbExact"
                            Margin="0,0,15,5"
                            Content="1. Chính xác"
                            ToolTip="Đúng từng chữ, hoa/thường, có dấu" />
                        <RadioButton
                            Name="rbFuzzy"
                            Margin="0,0,15,5"
                            Content="2. Gần đúng"
                            IsChecked="True"
                            ToolTip="Bỏ qua hoa/thường, dấu tiếng Việt, dấu câu" />
                        <RadioButton
                            Name="rbLoose"
                            Margin="0,0,5,5"
                            Content="3. Mở rộng"
                            ToolTip="Các từ khóa nằm rải rác, không cần liền nhau" />
                    </WrapPanel>
                </GroupBox>

                <GroupBox
                    Margin="0,0,0,0"
                    materialDesign:ColorZoneAssist.Mode="Standard"
                    Header="⚡ Hiệu suất CPU"
                    Style="{StaticResource MaterialDesignCardGroupBox}"
                    ToolTip="50% và 100% có thể gây lag/giật và sẽ sắp xếp kết quả theo thứ tự sau khi hoàn tất tìm kiếm">
                    <ComboBox
                        Name="cmbPerformance"
                        Width="180"
                        Margin="0"
                        Padding="5"
                        SelectedIndex="0">
                        <ComboBoxItem Content="1. Bình thường (1 Nhân)" />
                        <ComboBoxItem Content="2. Cao (50% CPU)" />
                        <ComboBoxItem
                            Content="3. Turbo (100% CPU)"
                            FontWeight="Bold"
                            Foreground="#D84315" />
                    </ComboBox>
                </GroupBox>
            </WrapPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,-10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="5,0,0,0"
                FontSize="13"
                FontStyle="Italic"
                Foreground="Gray"
                Text="* Sắp xếp theo thứ tự thời gian chỉnh sửa gần nhất" />

            <local:ResultListControl x:Name="mainResultControl" Grid.Row="1" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ProgressBar
                Name="pbSearchProgress"
                Grid.Column="0"
                Height="10"
                VerticalAlignment="Center"
                Maximum="100"
                Minimum="0"
                Visibility="Collapsed" />
            <TextBlock
                Name="txtStatus"
                Grid.Column="1"
                Margin="15,0,0,0"
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="Gray"
                Text="Sẵn sàng..." />
            <Button
                Name="btnCancel"
                Grid.Column="2"
                Margin="15,0,0,0"
                Click="btnCancel_Click"
                Content="❌ Hủy tìm"
                Foreground="Red"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Visibility="Collapsed" />
        </Grid>
    </Grid>
</Window>
<UserControl
    x:Class="PptxFastSearcher.ResultListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PptxFastSearcher">
    <ListView
        Name="lvResults"
        BorderBrush="#CCCCCC"
        BorderThickness="1"
        ItemsSource="{Binding}">
        <ListView.View>
            <GridView>
                <GridViewColumn Width="80" Header="">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Padding="5,2"
                                Click="btnOpenFile_Click"
                                Content="Mở File"
                                Tag="{Binding}" />
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn
                    Width="200"
                    DisplayMemberBinding="{Binding FileName}"
                    Header="Tên File" />
                <GridViewColumn
                    Width="80"
                    DisplayMemberBinding="{Binding SlideNumber}"
                    Header="Vị trí" />
                <GridViewColumn Width="400" Header="Văn bản khớp">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                MaxHeight="60"
                                Text="{Binding MatchedText}"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
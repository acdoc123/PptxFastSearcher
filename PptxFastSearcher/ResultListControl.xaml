<UserControl
    x:Class="PptxFastSearcher.ResultListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ListView
        Name="lvResults"
        HorizontalContentAlignment="Stretch"
        BorderThickness="0"
        ItemsSource="{Binding}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border
                    Margin="5"
                    Padding="15"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Opacity="0.5"
                            ShadowDepth="1"
                            Color="#D0D0D0" />
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#1976D2"
                                Text="{Binding FileName}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="0,2,0,8"
                                FontSize="12"
                                Foreground="#757575"
                                Text="{Binding SlideNumber}" />
                            <TextBlock
                                MaxHeight="60"
                                FontSize="13"
                                Text="{Binding MatchedText}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Click="btnOpenFile_Click"
                            Content="Mở File"
                            Cursor="Hand"
                            Style="{StaticResource MaterialDesignFlatMidBgButton}"
                            Tag="{Binding}" />
                    </Grid>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
<UserControl
    x:Class="PptxFastSearcher.ResultListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ListView
        Name="lvResults"
        HorizontalContentAlignment="Stretch"
        BorderThickness="0"
        ItemsSource="{Binding}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border
                    Margin="5"
                    Padding="15"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Opacity="0.5"
                            ShadowDepth="1"
                            Color="#D0D0D0" />
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Margin="0,0,15,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#1976D2"
                                Text="{Binding DisplayPath}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                ToolTip="{Binding FilePath}" />

                            <TextBlock
                                MaxHeight="60"
                                FontSize="13"
                                Text="{Binding MatchedText}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            <Button
                                Click="btnOpenFile_Click"
                                Content="Mở File"
                                Cursor="Hand"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}"
                                Tag="{Binding}" />

                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#757575"
                                Text="{Binding SlideNumber}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>